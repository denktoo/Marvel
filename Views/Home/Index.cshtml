@{
    ViewData["Title"] = "Home Page";
}

<style>
    .transition-effect {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    button:hover {
        background-color: #495057;
        color: #ffffff;
    }

    input:focus {
        outline: none; /* Removes the default focus outline */
    }
</style>

<h2 class="display-6" style="text-align: center;">MarvelAPI</h2>
<div class="d-flex justify-content-center align-content-center">
    <label for="entityPath" class="bg-dark text-white py-2 px-3 border border-1 border-dark border-end-0 rounded-end fs-6">
        https://localhost:7164/api/
    </label>


    <input type="text" id="entityPath" placeholder="characters/1"
        class="w-50 p-2 fs-6 border border-1 border-dark border-end-0 border-start-0" />


    <button id="fetchEntity" onclick="fetchEntity()"
            class="bg-dark text-white py-2 px-3 cursor-pointer fs-6 transition-effect border border-dark border-1 border-start-0 rounded-end">
        Request
    </button>
</div>

<h4 class="mt-4" style="padding-left: 13%;">Result:</h4>

<!-- Scrollable container for entity details -->
<div id="entityDetails" class="my-3 mx-auto w-75 overflow-auto border bg-white text-dark small p-2" style="height: 400px; border-color: #ccc; padding-left: 70px;">
    <!-- JSON output will be displayed here -->
</div>


<script src="~/js/script.js" asp-append-version="true"></script>
